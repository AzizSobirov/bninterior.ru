---
interface Props {
  name: string;
  id?: string;
  class?: string;
  container?: string;
  only?: boolean;
}

const { name, container, only = false, ...rest } = Astro.props;
---

<section class={name} {...rest}>
  <slot name="header" />
  {
    !only ? (
      <div class="container" class:list={container}>
        <slot />
      </div>
    ) : (
      <slot />
    )
  }
  <slot name="footer" />
</section>
