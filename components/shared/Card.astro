---
interface Props {
  ui?: string;
  id?: string;
}

const { ui, ...props } = Astro.props;
---

<div class="ucard" class:list={ui} {...props}>
  {
    Astro.slots.has("header") && (
      <div class="ucard__header">
        <slot name="header" />
      </div>
    )
  }
  <div class="ucard__content">
    <slot />
  </div>
  {
    Astro.slots.has("footer") && (
      <div class="ucard__footer">
        <slot name="footer" />
      </div>
    )
  }
</div>
