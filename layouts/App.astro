---
import "@assets/scss/app.scss";

interface Props {
  title: string;
}

const { title } = Astro.props;
const timestamp = Date.now();
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="My Astro template" />
    <meta name="viewport" content="width=device-width" />
    <meta name="theme-color" content="#407fff" />
    <link rel="icon" type="image/png" href="/favicon.ico" />
    <title>{title}</title>
  </head>
  <body>
    <ThePopup />
    <TheHeader />
    <main>
      <slot />
    </main>
    <TheFooter />

    <script src=`/assets/js/app.js?v=${timestamp}` is:inline></script>
  </body>
</html>
